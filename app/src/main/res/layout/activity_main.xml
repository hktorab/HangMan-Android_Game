                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:onClick="buttonS"
                    android:text="S"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button4"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
