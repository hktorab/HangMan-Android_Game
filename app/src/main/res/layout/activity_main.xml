                    android:onClick="buttonT"
                    android:text="T"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/buttonY"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:onClick="buttonY"
                    android:text="Y"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/buttonU"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:onClick="buttonU"
                    android:text="U"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/buttonI"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:onClick="buttonI"
                    android:text="I"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button0"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:onClick="buttonO"
                    android:text="O"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/buttonP"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:onClick="buttonP"
                    android:text="P"
                    android:textSize="10sp" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
